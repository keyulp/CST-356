@model IEnumerable<Lab_Week_4.Models.View.UserViewModel>

@{
    ViewBag.Title = "Users";
}

<h2 class="well">Users</h2>

@if (Model.Count() > 2)
{
    <div class="alert alert-info alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        There are more than 2 entities in the model.
    </div>
}
<p>
    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-lg", id = "Create" })
</p>
<table id="Table" class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearsInSchool)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsInSchool)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-xs" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-xs" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs" }) |
                @Html.ActionLink("Kids", "List", "Kid", new { userId = item.Id }, new { @class = "btn btn-xs" })
            </td>
        </tr>
    }

</table>

<button id="Hide" type="button" class="btn btn-info">Hide</button>
<button id="Show" type="button" class="btn btn-info">Show</button>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#Create").click(function ()
            { 
            });
            $("#Show").click(function () {
                $("Table").show()
            });
            $("#Hide").click(function () {
                $("Table").hide()
            });
        });

    </script>
}